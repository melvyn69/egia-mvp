{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "rootDir": "server/_shared",
    "outDir": "server/_shared_dist",
    "declaration": false,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noEmitOnError": true
  },
  "include": ["server/_shared/**/*.ts"],
  "exclude": ["node_modules", "dist", ".vercel"]
}
